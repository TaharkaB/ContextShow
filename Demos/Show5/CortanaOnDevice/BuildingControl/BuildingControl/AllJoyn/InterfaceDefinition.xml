    <method name="GetBuildingDefinitionJson">
      <arg name="json" type="s" direction="out"/>
    </method>
    <method name="SwitchBuilding">
      <arg name="onOff" type="b" direction="in"/>
    </method>
    <method name="SwitchRoom">
      <arg name="roomName" type="s" direction="in"/>
