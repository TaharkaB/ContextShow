<Page
  x:Class="Win81KinectHandTracking.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Win81KinectHandTracking"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <Grid>
    <local:KinectVideoControl />
    <Canvas
      x:Name="drawCanvas">
      <Ellipse
        x:Name="leftHandEllipse"
        Opacity="0.5"
        Visibility="Collapsed"
        Width="100"
        Height="100"
        Fill="Red" />
      <Ellipse
        x:Name="rightHandEllipse"
        Opacity="0.5"
        Visibility="Collapsed"
        Width="50"
        Height="50"
        Stroke="White"
        StrokeThickness="5"/>
    </Canvas>
  </Grid>
</Page>
