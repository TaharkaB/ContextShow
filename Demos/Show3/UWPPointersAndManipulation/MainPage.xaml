<Page
  x:Class="UWPPointersAndManipulation.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:UWPPointersAndManipulation"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  xmlns:tb="using:Microsoft.Labs.InkToolbarControl">
  <Grid
    Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition
        Height="Auto" />
      <RowDefinition
        Height="*" />
    </Grid.RowDefinitions>

    <StackPanel
      Orientation="Horizontal"
      HorizontalAlignment="Center">
      <Button
        Background="Transparent"
        Content="Paper Type">
        <Button.Flyout>
          <MenuFlyout>
            <MenuFlyoutItem
              Click="OnChoosePaperType">Lined</MenuFlyoutItem>
            <MenuFlyoutItem
              Click="OnChoosePaperType">Grid</MenuFlyoutItem>
            <MenuFlyoutItem
              Click="OnChoosePaperType">Crumpled</MenuFlyoutItem>
          </MenuFlyout>
        </Button.Flyout>
      </Button>
    </StackPanel>

    <Grid
      Grid.Row="1"
      Background="Black">
      <Grid.RowDefinitions>
        <RowDefinition
          Height="4*" />
        <RowDefinition
          Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          Width="4*" />
        <ColumnDefinition
          Width="*" />
      </Grid.ColumnDefinitions>
      <Image
        x:Name="backdrop"
        Source="Assets/lined.png"
        Stretch="Fill"
        Grid.ColumnSpan="2"
        Grid.RowSpan="2" />
      <Image
        x:Name="imgInput"
        Stretch="Uniform"
        Grid.Column="1"
        Grid.Row="1"/>

      <Canvas
        x:Name="canvas" />

      <InkCanvas
        x:Name="inkCanvas" />

      <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Grid.RowSpan="2"
        Orientation="Horizontal"
        Grid.ColumnSpan="2"
        Margin="20,40,20,0">
        <Button
          Opacity="1.0"
          Click="OnRed"
          Template="{x:Null}"
          Margin="20,0">
          <Grid>
            <Ellipse
              Width="150"
              Height="150"
              Stroke="Black"
              StrokeThickness="5"
              Fill="Red" />
            <TextBlock
              VerticalAlignment="Center"
              FontSize="36"
              HorizontalAlignment="Center"
              Text="Red"
              Foreground="Black" />
          </Grid>
        </Button>
        <Button
          Opacity="0.5"
          Click="OnGreen"
          Template="{x:Null}"
          Margin="20,0">
          <Grid>
            <Ellipse
              Width="150"
              Height="150"
              Stroke="Black"
              StrokeThickness="5"
              Fill="Green" />
            <TextBlock
              VerticalAlignment="Center"
              FontSize="36"
              HorizontalAlignment="Center"
              Text="Green"
              Foreground="Black" />
          </Grid>
        </Button>
        <Button
          Opacity="0.5"
          Click="OnBlue"
          Template="{x:Null}"
          Margin="20,0">
          <Grid>
            <Ellipse
              Width="150"
              Height="150"
              Stroke="Black"
              StrokeThickness="5"
              Fill="Blue" />
            <TextBlock
              VerticalAlignment="Center"
              FontSize="36"
              HorizontalAlignment="Center"
              Text="Blue"
              Foreground="Black" />
          </Grid>
        </Button>
        <Button
          Template="{x:Null}"
          Margin="20,0"
          Click="OnAddPhoto">
          <Grid>
            <Ellipse
              Width="150"
              Height="150"
              Stroke="Black"
              StrokeThickness="5">
              <Ellipse.Fill>
                <ImageBrush
                  Stretch="Fill"
                  ImageSource="Assets/landscape.jpg" />
              </Ellipse.Fill>
            </Ellipse>
            <TextBlock
              VerticalAlignment="Center"
              FontSize="36"
              HorizontalAlignment="Center"
              Text="Photo"
              Foreground="Black" />
          </Grid>
        </Button>
        <Button
          Click="OnClear"
          Template="{x:Null}"
          Margin="20,0">
          <Grid>
            <Ellipse
              Width="150"
              Height="150"
              Stroke="Black"
              StrokeThickness="5"
              Fill="Transparent" />
            <TextBlock
              VerticalAlignment="Center"
              FontSize="36"
              HorizontalAlignment="Center"
              Text="Clear"
              Foreground="Black" />
          </Grid>
        </Button>
      </StackPanel>

    </Grid>

  </Grid>
</Page>
